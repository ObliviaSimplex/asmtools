void main(){

  __asm__("

          jmp forward
backward:
          pop    %esi   # get the address of hello world string
          movl   $4, %eax  # do write syscall
          movl   $2, %ebx
          movl   %esi, %ecx
          movl   $12, %edx
          int    $0x80
          int3           # breakpoint. here the programme will 
                         # stop and give control back to the parent

forward: 
          call   backward
          .string \"Hello World\\n\""
          );
}
